<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <!-- Start white rounded tiles -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/compete_with_friends_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/compete_with_friends_string"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="10"
        android:lineSpacingExtra="10dp"
        android:background="@drawable/challenges_compete_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_33c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/compete_requests_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/compete_requests_string"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="10"
        android:lineSpacingExtra="10dp"
        android:background="@drawable/challenges_request_btn"
        app:layout_constraintTop_toTopOf="@id/gl_33c"
        app:layout_constraintBottom_toBottomOf="@id/gl_66c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/leaderboard_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/leaderboard_string"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="10"
        android:lineSpacingExtra="10dp"
        android:background="@drawable/challenges_leaderboard_btn"
        app:layout_constraintTop_toTopOf="@id/gl_66c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- End white rounded tiles -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_33c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_66c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <!-- End of guidelines  -->

</androidx.constraintlayout.widget.ConstraintLayout>